@model Cooperchip.ITDeveloper.Domain.Models.Cid



@{
    ViewBag.Title = "Edição da Cid: [ " + Model.Diagnostico.ToUpper() + " ]";
}


@{ Layout = null; }

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">MedicalManagement-Sys</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4> @ViewBag.Title </h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Id" hidden />

                    <div class="form-group">
                        <label asp-for="CidInternalId" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="CidInternalId" class="form-control" />
                            <span asp-validation-for="CidInternalId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Codigo" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Codigo" class="form-control" />
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Diagnostico" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="Diagnostico" class="form-control" />
                            <span asp-validation-for="Diagnostico" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Atualizar" class="btn btn-success" />
                        </div>
                    </div>
                </div>
                }

            </div>
        </div>
        <div class="modal-footer">
            <input type="button" value="Cancelar" class="btn btn-default" data-dismiss="modal" />
        </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->