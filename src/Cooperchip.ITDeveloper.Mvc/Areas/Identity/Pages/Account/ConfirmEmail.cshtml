@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmação do Email";
}

<h2>@ViewData["Title"]</h2>
<div class="card">
    <div class="card-title">
        <h3 class="card-header">Confirmação do Email</h3>
    </div>
    <div class="card-body">
        <h4>Email Confirmado!</h4>
        <hr />
        <p>Obrigado por confirmar seu Email.</p>
        <p>A partir de agora você poderá usufluir de todos os benefícios do sistema. </p>
    </div>
    <div class="card-footer">
        <a class="btn btn-info" asp-controller="Home" asp-action="Index">Voltar para Pagina inicial</a>
    </div>
</div>

